<div id="actor-settings">
  <h2>Actor</h2>
  <%= form_tag users_settings_path, method: "put" do |f| %>
    <%= label_tag "At what time would you start performing?", nil %>
    <%= time_select :actor, :availability_start_time,
                    { prompt: true, ignore_date: true, discard_minute: true, required: true, selected: current_user.availability_start_time },
                    { class: "form-control" } %>

    <%= label_tag "At what time would you stop performing?", nil, class: "mt-3" %>
    <%= time_select :actor, :availability_end_time,
                    { prompt: true, ignore_date: true, discard_minute: true, selected: current_user.availability_end_time },
                    { class: "form-control" } %>
    <%= submit_tag "Add or update your availabilities", class: "btn btn-success btn-block my-4" %>
  <% end %>
</div>