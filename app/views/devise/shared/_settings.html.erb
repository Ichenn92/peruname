<section class="my-4" id="actor-settings">
  <h2>Actor</h2>
  <%= form_tag users_settings_path, method: "put" do |f| %>
    <%= hidden_field :actor, actor: true %>

    <%= label_tag "Availability start hour", nil %>
    <%= time_select :actor, :availability_start_time,
                    { ignore_date: true, discard_minute: true, required: true, selected: current_user.availability_start_time },
                    { class: "form-control" } %>

    <%= label_tag "Availability end hour", nil, class: "mt-3" %>
    <%= time_select :actor, :availability_end_time,
                    { ignore_date: true, discard_minute: true, selected: current_user.availability_end_time },
                    { class: "form-control" } %>
    <%= submit_tag "Become an actor now", class: "btn btn-success btn-block my-4" %>
  <% end %>
</section>