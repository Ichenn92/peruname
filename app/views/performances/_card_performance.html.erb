<%= link_to performance_path(performance) do %>
    <div class="card-performance">
      <img src= <%= "https://source.unsplash.com/400x300/?#{performance.character.name}" %> />
      <h2 class="card-performance-number-of-guests"><i class="fas fa-heart"></h2>
      <div class="card-performance-infos">
        <div>
          <h2><%= performance.character.name %></h2>
          <p><%= performance.user.nickname %></p>
        </div>
        <h2 class="card-performance-pricing">CHF <%= performance.price_per_hour %></h2>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-performance-user avatar-bordered" />
      </div>
    </div>
  <% end %>