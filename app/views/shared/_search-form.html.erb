<div class="search-bar">

  <%= form_tag performances_search_path, class: "form-inline", method: :get do %>
    <%= text_field_tag :address,
                       params[:address],
                       class: "form-control",
                       placeholder: "Choose a location" %>
    <%= collection_select :performance, :character_category,
                          CharacterCategory.all,
                          :id, :name,
                          { prompt: "Category", include_blank: "All" },
                          { class: "form-control" } %>
    <%= text_field_tag :date,
                       params[:date],
                       as: :string,
                       class: "datepicker form-control",
                       placeholder: "Pick a date" %>
    <% # date_select :start_date, :startdate , :class => 'datepicker' %>
    <%= submit_tag "Search", class: "btn btn-dark btn-search" %>
  <% end %>
  
</div>